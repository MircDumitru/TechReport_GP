   "source": [
    "def ComputeSampleCovariances(x, var, B):    \n",
    "    S_x = np.cov(x, \n",
    "                 rowvar = False, \n",
    "                 bias = True)\n",
    "    S_s = S_x - var * B\n",
    "    var_x = np.diag(S_x)\n",
    "    var_s = np.diag(S_s)    \n",
    "    #-----\n",
    "    return S_x, S_s, var_x, var_s"
   ]
  }
